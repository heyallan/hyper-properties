{% extends "template-default.njk" %}

{% block content %}

<main class="container">
  <section class="margin-bottom-2">
    <ul class="list-inline list-middot">
      {% for fileName, fileContent in cssFiles %}
        {% if fileContent and (fileName !== "bundle") and (fileName !== "variables") %}
          <li><a href="#{{ fileName }}">{{ fileName | capitalize }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </section>
  <section>
    {% for fileName, fileContent in cssFiles %}
      {% if fileContent and (fileName !== "bundle") and (fileName !== "variables") %}
        <section>
          <h3 id="{{ fileName }}">{{ fileName | capitalize }} <small class="extra-small font-weight-400"><a href="#">â†‘ Back to top</a></small> </h3>
          <pre class="language-css"><code>{{ fileContent }}</code></pre>
        </section>
      {% endif %}
    {% endfor %}
  </section>
</main>

{% endblock %}
